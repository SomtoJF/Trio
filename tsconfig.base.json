{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@trio/components": ["libs/components/src/index.ts"],
      "@trio/components/server": ["libs/components/src/server.ts"],
      "@trio/hooks": ["libs/hooks/src/index.ts"],
      "@trio/hooks/server": ["libs/hooks/src/server.ts"],
      "@trio/query-key-factory": ["libs/query-key-factory/src/index.ts"],
      "@trio/query-key-factory/server": [
        "libs/query-key-factory/src/server.ts"
      ],
      "@trio/services": ["libs/services/src/index.ts"],
      "@trio/services/server": ["libs/services/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
